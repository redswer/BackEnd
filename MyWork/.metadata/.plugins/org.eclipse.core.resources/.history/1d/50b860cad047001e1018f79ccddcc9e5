package j03_forWhile;

public class Ex06_Star {

	public static void main(String[] args) {
		// 1) 반 삼각형
		// => * 을 1개부터 시작해서 갯수를 늘려가면서 9 line 출력
		// => 각 행별로 갯수만큼 출력하기
		System.out.println("** 1) 반삼각형 **\n");

		for (int i = 1; i < 10; i++) {
			for (int j = 1; j < i + 1; j++) {
				System.out.print("*");
			}
			System.out.println("");
		}
		System.out.println("\n==================================\n");

//		===============================================

		// 2) 피라미드 (삼각형)
		System.out.println("** 1) 피라미드 (삼각형) **\n");

		for (int i = 1; i < 6; i++) {
			for (int j = 1; j <= i + 4; j++) {
				if (j <= 5 - i) {
					System.out.print(" ");
				} else {
					System.out.print("*");
				}
			}
			System.out.println("");
		}

//		===============================================

		// 3) 다이아몬드

//		===============================================

		// 4) 모래시계

	} // main

} // class