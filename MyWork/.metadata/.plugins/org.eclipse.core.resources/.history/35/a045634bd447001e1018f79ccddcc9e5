package j03_forWhile;

public class Ex06_Star {

	public static void main(String[] args) {
		// 1) 반 삼각형
		// => * 을 1개부터 시작해서 갯수를 늘려가면서 9 line 출력
		// => 각 행별로 갯수만큼 출력하기
		System.out.println("** 1) 반삼각형 **\n");

		for (int i = 1; i < 10; i++) {
			for (int j = 1; j < i + 1; j++) {
				System.out.print("*");
			}
			System.out.println("");
		}
		System.out.println("\n==================================\n");

//		===============================================

		// 2) 피라미드 (삼각형)
		System.out.println("** 2) 피라미드 (삼각형) **\n");
		int line = 7;

		for (int i = 1; i <= line; i++) {
			for (int j = 1; j <= line + i - 1; j++) {
				if (j <= line - i) {
					System.out.print(" ");
				} else {
					System.out.print("*");
				}
			}
			System.out.println("");
		}
		System.out.println("\n==================================\n");

//		===============================================

		// 3) 다이아몬드
		System.out.println("** 3) 다이아몬드 **\n");

		line = 5;
		int m = (line + 1) / 2;

		// 상부
		for (int i = 1; i <= m; i++) {
			for (int j = 1; j <= m + i - 1; j++) {
				if (j <= m - i) {
					System.out.print(" ");
				} else {
					System.out.print("*");
				}

			}
			System.out.println("");

			// 하부
			for (int s = m + 1; s <= line; s++) {

			}
		}

//		===============================================

		// 4) 모래시계

	} // main

} // class