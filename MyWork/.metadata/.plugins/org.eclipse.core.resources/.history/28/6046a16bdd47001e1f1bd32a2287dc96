package a01_homework;

public class Ex01_230831 {

	public static void main(String[] args) {

		// 4-6
		for (int i = 1; i <= 6; i++) {
			for (int j = 1; j <= 6; j++) {
				if (i + j == 6) {
					System.out.println(i + "+" + j + "=" + (i + j));
				}
			}
		}

//		=======================================
		System.out.println("");

		// 4-7
		String str = "12345";
		int sum = 0;

		for (int i = 0; i < str.length(); i++) {
			sum += str.charAt(i) - '0';
		}
		System.out.println("sum = " + sum);

//		=======================================
		System.out.println("");

		// 4-9
		int num = 12345;
		sum = 0;

		while (num > 0) {
			sum += num % 10;
			num /= 10;
		}
		System.out.println("sum = " + sum);
	} // main

} // class