package a01_homework;

public class Wild extends Mammal {
	String place = "동물원";

	public String toString() {
		return "사는 곳 = " + place + "에 산다";
	}

	public void lion() {

		super.cry = "어흥";

		System.out.println("사자 => " + "[ " + super.toString(breath, legs) + ", " + super.toString(cry, run) + ", "
				+ toString() + " ]");
	}

	public void tiger() {
		super.breath = "육지";
		super.legs = 4;
		super.cry = "어흥";
		super.run = "빠름";

		System.out.println("호랑이 => " + "[ " + super.toString(breath, legs) + ", " + super.toString(cry, run) + ", "
				+ toString() + " ]");
	}

	public static void main(String[] args) {

		Wild animal = new Wild();
		animal.lion();

		animal.tiger();
	}

}
