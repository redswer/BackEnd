package j02_ifSwitch;

public class Ex01_ifBasic {

	public static void main(String[] args) {
		// ** 삼항식
		boolean rain = true;
		String doing = (rain == true) ? "Study_Java" : "그래도 공부함";

//		===================================================

		// ** if : 단일구문
		if (rain == true) {
			doing = "Study_Java";
		} else {
			doing = "그래도 공부함";
		}

		// ** if : 복합구문 (compound statement)
		if (rain == true) {
			doing = "Study_Java";
		}
	}

}
