package j02_ifSwitch;

import java.util.Scanner;

//** 실습 : 
//1. 월을 입력 받아서 
//2. 몇일까지 인지,  
// => 1,3,5,7,8,10,12월 => ?월은 31일 까지 입니다.
// => 4,6,9,11 월 => ?월은 30일 까지 입니다.
// => 2 월 => ?월은 29일 까지 입니다.
//3. 무슨 계절인지 출력 하기
//  => 3~5:봄 , 6~8:여름, 9~11:가을, 12~2:겨울

//** switch case 구문으로 작성 하세요 ~~

public class Ex04_switchMonth {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		System.out.println("월을 입력하세요");
		int month = Integer.parseInt(sc.nextLine());

		String season = "봄";
		int day = 31;

		switch (month) {
		case 1:
		case 3:
		case 5:
		case 7:
		case 8:
		case 10:
		case 12:
			day = 31;
			switch (month) {
			case 1:
				season = "겨울";
				break;

			case 3:
			case 5:
				season = "봄";
				break;

			case 7:
			case 8:
				season = "여름";
				break;

			case 10:
				season = "가을";
				break;

			case 12:
				season = "겨울";
				break;
			}

		case 4:
		case 6:
		case 9:
		case 11:
			day = 30;
			break;

		case 2:
			day = 29;
			break;
		} // switch day

		switch (month) {
		case 12:
		case 1:
		case 2:
			season = "겨울";
			break;

		case 3:
		case 4:
		case 5:
			season = "봄";
			break;

		case 6:
		case 7:
		case 8:
			season = "여름";
			break;

		case 9:
		case 10:
		case 11:
			season = "가을";
			break;
		} // switch season

		if (month >= 1 && month <= 12) {
			System.out.println(month + "월은 " + day + "일까지 입니다.");
			System.out.println(month + "월은 " + season + "입니다");
		} else {
			System.out.println("1부터 12까지의 숫자만 입력하세요");
		}

		sc.close();
	} // main

} // class
